<div class="container-fluid">
    <ul class="list-unstyled d-flex gap-4 align-items-center m-0">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if is_granted('ROLE_ADMIN') %}
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_admin') }}">Dashboard</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_admin_timer') }}">Horaires</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_admin_add_subject') }}">Matière</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_admin_school_fees') }}">Frais</a>
        {% elseif is_granted('ROLE_TEACHER') %}
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_teacher') }}">Accueil</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_teacher_add_course') }}">Cours</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_teacher_add_ressource') }}">Document</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_teacher_notes') }}">Notes</a>
        {% elseif is_granted('ROLE_PARENT') %}
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_parents') }}">Infos</a>
            <a class="text-decoration-none fs-3 text-black" href="">Frais_à_payer</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_parents_show_facture') }}">Facture</a>
            <a class="text-decoration-none fs-3 text-black" href="">Contact_Admin</a>
        {% elseif is_granted('ROLE_USER') %}
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_profile_courses') }}">Tous les cours</a>
            <a class="text-decoration-none fs-3 text-black" href="{{ path('app_profile') }}#contact">Contact_Admin</a>
        {% endif %}
        {% else %}
            <li><a class="text-decoration-none fs-3 text-black" href="{{ path('app_main') }}">Accueil</a></li>
            <li><a class="text-decoration-none fs-3 text-black" href="{{ path('app_about') }}">Apropos</a></li>
            <li><a class="text-decoration-none fs-3 text-black" href="{{ path('app_register') }}">Signup</a></li>
            <li><a class="text-decoration-none fs-3 text-black" href="{{ path('app_login') }}">Login</a></li>
            <li><a class="text-decoration-none fs-3 text-black" href="{{ path('app_main') }}#contact">Contact</a></li>
        {% endif %}
    </ul>
</div>
