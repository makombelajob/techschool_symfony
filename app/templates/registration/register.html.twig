{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="col-6 m-auto alert alert-success register-form">
        <h1 class="text-center text-uppercase fs-1 text-primary">Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div class="fs-1 text-uppercase">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="fs-1 text-uppercase">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        <div class="fs-3">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <div class="text-center my-3">
            <button type="submit" class="btn btn-primary fs-3">Register</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
