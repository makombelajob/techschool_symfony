{# Étend le template de base appelé "base.html.twig" #}
{% extends 'base.html.twig' %}

{# Définit le titre de la page dans le bloc "title" #}
{% block title %}page d'accueil
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('js/modules/contactForm.js') }}" defer></script>
	<script src="{{ asset('js/modules/carousel.js') }}" defer></script>
{% endblock %}
{# Début du bloc principal "body" qui contient tout le contenu visible #}
{% block body %}
	{# SECTION: Titre principal de la page #}
	<section class="row">
		<div class="col-12 text-center my-3">
			<h1 class="fs-1 fw-semibold">easy-
				<span class="text-uppercase fs-1 fw-semibold">ENT</span>
			</h1>
		</div>
		{# SECTION: Carousel (diaporama d’images) #}
		<div
			id="carousel" class="carousel slide">
			{# Boutons de navigation du carousel #}
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>

			{# Contenu du carousel (images) #}
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="{{ asset('images/slide/image_d_une_salle_de_cours.png') }}" class="d-block w-100" alt="Image d'une salle de cours générée par l'IA" width="100%" height="auto">
				</div>
				<div class="carousel-item">
					<img src="{{ asset('images/slide/image_de_la_salle_informatique.png') }}" class="d-block w-100" alt="Image d'une salle informatique générée par l'IA" width="100%" height="auto">
				</div>
				<div class="carousel-item">
					<img src="{{ asset('images/slide/image_du_laboratoire.png') }}" class="d-block w-100" alt="Image d'un laboratoire générée par l'IA" width="100%" height="auto">
				</div>
			</div>

			{# Flèches de navigation du carousel #}
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</section>

	{# SECTION: À propos de l’école #}
	<section class="row" id="a-propos" aria-label="Section à propos de l'ENT">
		<div class="text-center col-12 my-3">
			<h2 class="fs-2 text-uppercase fw-semibold">À propos</h2>
		</div>

		<div class="col-11 m-auto">
			<div
				class="row justify-content-between">

				<!-- Article 1 : Notre Mission -->
				<article class="col-md-5 card mb-3">
					<img class="card-image" src="{{ asset('images/real/entree_principale.png') }}" alt="Image des écoliers" width="100%" height="auto">
					<div class="card-body">
						<h2 class="card-title fs-2 text-uppercase">Notre Mission</h2>
						<p class="card-text fs-3">Rendre l’éducation accessible, intuitive et numérique pour tous les élèves, enseignants...
						</p>
						<div class="text-center my-2">
							<a class="fs-3 btn btn-primary" href="{{ path('app_about') }}">Savoir plus</a>
						</div>
					</div>
				</article>

				<!-- Article 2 : Notre équipe -->
				<article class="col-md-5 card mb-3">
					<img class="card-image" src="{{ asset('images/real/un_proffesseur_prepare_le_cours.png') }}" alt="Image des écoliers" width="100%" height="auto">
					<div class="card-body">
						<h2 class="card-title fs-2 text-uppercase">Notre équipe</h2>
						<p class="card-text fs-3">Construire une école numérique inclusive, où chaque élève peut progresser à son rythme.</p>
						<div class="text-center my-2">
							<a class="fs-3 btn btn-primary" href="{{ path('app_about') }}">Savoir plus</a>
						</div>
					</div>
				</article>

			</div>
		</div>
	</section>


	{# SECTION: Activités proposées par l’école #}
	<section class="row" id="activities">
		<div class="text-center col-12 my-3">
			<h2 class="fs-2 text-uppercase fw-semibold">Nos activites</h2>
		</div>

		{# Plusieurs activités regroupées par ligne #}
		<div class="col-12">
			<div
				class="main-activity">
				{# Activité 1 : Sciences #}
				<article class="col-md-4 alert alert-primary mb-3 text-center" id="atom">
					<div>
						<svg class="py-3" width="100" height="100">
							<use href="{{ asset('images/sprites.svg') }}#atom"></use>
						</svg>
					</div>
					<div class="card-body">
						<h2 class="card-title fs-1">Sciences et découvertes</h2>
						<p class="card-text fs-4">Accédez à des ressources numériques de physique, chimie, SVT et technologie. 
												Nos contenus sont adaptés aux programmes scolaires locaux et favorisent la curiosité scientifique.</p>
					</div>
				</article>

				{# Activité 2 : Cours interactifs #}
				<article class="col-md-4 alert alert-danger mb-3 text-center" id="game">
					<div>
						<svg class="py-3" width="100" height="100">
							<use href="{{ asset('images/sprites.svg') }}#present"></use>
						</svg>
					</div>
					<div class="card-body">
						<h2 class="card-title fs-1">Enseignement interactif</h2>
						<p class="card-text fs-4">Nos leçons sont enrichies de quiz, vidéos explicatives, audios, jeux pédagogiques et exercices interactifs pour un apprentissage dynamique sur mobile, tablette ou PC.</p>
					</div>
				</article>

				{# Activité 3 : Travail en groupe #}
				<article class="col-md-4 alert alert-info mb-3 text-center" id="plane">
					<div>
						<svg class="py-3" width="100" height="100">
							<use href="{{ asset('images/sprites.svg') }}#people"></use>
						</svg>
					</div>
					<div class="card-body">
						<h2 class="card-title fs-1">Travail collaboratif</h2>
						<p class="card-text fs-4">Créez des groupes de travail, échangez des documents, collaborez en temps réel sur des projets, exposés ou devoirs. L’apprentissage en équipe est au cœur de notre ENT.</p>
					</div>
				</article>
			</div>
		</div>
	</section>

	{# SECTION: Carte de localisation Google Maps #}
	<section class="row" id="address">
		<div class="text-center col-12 my-3">
			<h2 class="fs-2 text-uppercase fw-semibold">Notre Localisation</h2>
		</div>
		<div class="col-12 m-auto">
			<iframe class="w-100" src="https://www.google.com/maps/embed?pb=..." width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
		</div>
	</section>

	{# SECTION: Formulaire de contact #}
	<section class="row" id="contact">
		<div class="text-center col-12 my-3">
			<h2 class="fs-2 text-uppercase fw-semibold">Contact</h2>
		</div>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show text-center" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<div class="alert alert-secondary">
			{{ form_start(formContact, {'attr': {'id':'contactForm', 'novalidate': 'novalidate'}}) }}
			<div class="mt-3 fs-2">
				{{ form_label(formContact.email) }}
				{{ form_widget(formContact.email) }}
				<div class="invalid-feedback">
					Veuillez entrer un email valide
				</div>
			</div>
			<div class="fs-2">
				{{ form_label(formContact.subject) }}
				{{ form_widget(formContact.subject) }}
				<div class="invalid-feedback">
					Au moins 5 caractères obligatoire
				</div>
			</div>
			<div class="fs-2">
				{{ form_label(formContact.message) }}
				{{ form_widget(formContact.message) }}
				<div class="invalid-feedback">
					Au moins 5 caractères obligatoire
				</div>
			</div>
			<div class="fs-4 form-check text-secondary">
				{{ form_label(formContact.gpdr) }}
				{{ form_widget(formContact.gpdr) }}
				<div class="text-center my-3">
					{{ form_row(formContact.envoyer) }}
				</div>
				{{ form_end(formContact) }}
			</div>
		</section>

		{# Bouton pour remonter en haut de page #}
		{% include '_partials/_up_button.html.twig' %}


	{% endblock %}

