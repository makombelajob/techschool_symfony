{% extends 'base.html.twig' %}

{% block title %}admin dashboard{% endblock %}

{% block body %}
    <section class="row">
        <div class="col-12 text-center">
            <h1 class="fs-1 text-black fw-bolder">Admin DashBoard</h1>
        </div>
        <div class="col-12">
            {% for user in users %}
                <article class="alert alert-danger">
                    <h2>{{ user.lastname }} {{ user.firstname }}</h2>
                    <p>{{ user.email }}</p>
                    <time>{{ user.registerAt | date }}</time>
                </article>
            {% endfor %}
        </div>
    </section>
    <section class="row">
        <div class="col-12 text-center">
            <h1 class="fs-1 text-black fw-bolder">Toutes les classes</h1>
        </div>
        <div class="col-12">
            {% for class in classes %}
                <article class="alert alert-warning">
                    <h2>{{ class.name }}</h2>
                    <p>{{ class.level }}</p>
                </article>
            {% endfor %}
        </div>
    </section>
    <section class="row">
        <div class="col-12 text-center">
            <h1 class="fs-1 text-black fw-bolder">Principals cours</h1>
        </div>
        <div class="col-12">
            {% for subject in subjects %}
                <article class="alert alert-info">
                    <h2>{{ subject.name }}</h2>
                </article>
            {% endfor %}
        </div>
    </section>
    <section class="row">
        <div class="col-12 text-center">
            <h1 class="fs-1 text-black fw-bolder">Les messages</h1>
        </div>
        <div class="col-12">
            {% for contact in contacts %}
                <article class="alert alert-success">
                    <h2>{{ contact.email }}</h2>
                    <p>{{ contact.subject }}</p>
                    <p>{{ contact.message }}</p>
                    <p>{{ contact.sendAt | date }}</p>
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}
