{% block stylesheets %}
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto:ital,wght@0,100..900;1,100..900&family=Ubuntu+Condensed&family=Ubuntu+Sans:ital,wght@0,100..800;1,100..800&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"/>
{% endblock %}
<section class="container">
	<div classs="row">
		<h1 class="text-primary">Cours :
			{{ course.name }}</h1>
		<p class="fs-4">
			Vous avez été ajouter pour suivre ce cours

		</p>
		<article class="text-black fs-3 alert alert-info col-8 m-auto">
			<p class="fw-bolder text-uppercase">Jours : {{ course.name }}</p>
			<p class="fw-bolder text-uppercase">Jours : {{ course.day }}</p>
			<p class="fw-bolder text-uppercase">Débute à :{{ course.startedAt|date }}</p>
			<p class="fw-bolder text-uppercase">Finis à :{{ course.endAt|date }}</p>
		    <p class="fw-semibold text-capitalize">Proffesseur :{{ teacher_lastname }} {{ teacher_firstname }}</p>
		</article>
		<p class="fs-3">Cordialement</p>
	</div>
</section>


